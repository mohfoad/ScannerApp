    "url": "^0.11.0",
    "util": "^0.10.3"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "enzyme": "^2.8.2",
    "husky": "^0.13.1",
    "ignite-animatable": "^0.3.1",
    "ignite-ir-next": "^0.0.7",
    "ignite-vector-icons": "^0.2.1",
    "jest": "^20.0.3",
    "metro-react-native-babel-preset": "^0.52.0",
    "mockery": "^2.0.0",
    "prettier-standard": "^5.0.0",
    "react-addons-test-utils": "~15.4.1",
    "react-dom": "~15.4.1",
    "react-native-debugger-open": "^0.3.18",
    "react-native-mock": "^0.3.1",
    "react-test-renderer": "~15.4.1",
    "reactotron-apisauce": "^1.7.0",
    "reactotron-react-native": "^1.7.0",
    "reactotron-redux": "^1.7.0",
    "reactotron-redux-saga": "^1.7.0",
    "redux-devtools-extension": "^2.13.2",
    "snazzy": "^7.0.0",
    "standard": "^10.0.2"
  },
  "jest": {
    "verbose": true,
    "preset": "react-native",
    "testPathIgnorePatterns": [
      "./__tests__/Setup.js",
      "./node_modules"
    ],
    "setupFiles": [
      "./__tests__/Setup.js"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "./coverage"
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "jest",
      "describe",
      "it",
      "test",
      "expect",
      "fetch",
      "navigator",
      "__DEV__",
      "XMLHttpRequest",
      "FormData",
      "React$Element"
    ],
    "ignore": [
      "/App/Lib/InputValidators.js"
    ]
  },
  "config": {
    "ghooks": {
      "pre-commit": "if [ -d 'ignite-base' ]; then cd ignite-base; fi; npm run lint; npm run "
    }
  }
}
