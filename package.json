    "react-native-infinite-scroll": "^1.0.6",
    "react-native-keep-awake": "^3.1.0",
    "react-native-keyboard-manager": "^4.0.13-10",
    "react-native-localize": "^1.0.3",
    "react-native-message-bar": "^1.6.0",
    "react-native-modal": "^2.4.0",
    "react-native-modal-picker": "^0.0.16",
    "react-native-picker-select": "^6.1.0",
    "react-native-progress": "^3.3.0",
    "react-native-reanimated": "^2.10.0",
    "react-native-search-bar": "^3.0.0",
    "react-native-segmented-control-tab": "^3.4.0",
