{
  "name": "ScannerApp",
  "version": "0.1.2",
  "private": true,
  "scripts": {
    "start": "kill -9 $(lsof -t -i:8081) || true && node node_modules/react-native/local-cli/cli.js start --port 8081",
    "startWithSim": "kill -9 $(lsof -t -i:8081) || true && node node_modules/react-native/local-cli/cli.js start --port 8081 & react-native run-ios --simulator='iPhone X'",
    "api:start:dev": "kill -9 $(lsof -t -i:3030) || true && cd ../sage-api && SAGE_ADMIN_EMAIL=admin@email.com OAUTH_USER=sage DEBUG_MIDDLEWARE=true DISABLE_MONGO_ID_VALIDATOR=true npm start",
    "api:start": "kill -9 $(lsof -t -i:3030) || true && cd ../sage-api && DEBUG_MIDDLEWARE=true DISABLE_MONGO_ID_VALIDATOR=true npm start",
    "api:ngrok": "killall -9 ngrok || true && ngrok http -subdomain mincedmit 3030",
    "emu:open:android": "$(~/Library/Android/sdk/tools/emulator -avd Pixel_API_25 > /dev/null 2>&1) & sleep 20 && echo 'launched Pixel API 25 emulator'",
    "app:run:ios": "react-native run-ios --simulator='iPhone 7'",
    "app:run:android": "yarn emu:open:android && react-native run-android",
    "app:run:both": "yarn app:run:ios & yarn app:run:android",
    "lint": "echo '--- standard, yeah, disabled ---' || standard --verbose | snazzy",
    "lintdiff": "git diff --name-only --cached --relative | grep '\\.js$' | xargs standard | snazzy",
    "fixcode": "standard --fix",
    "clean": "rm -rf $TMPDIR/react-* && watchman watch-del-all && npm cache clean",
    "clean:android": "cd android/ && ./gradlew clean && cd .. && react-native run-android",
    "newclear": "rm -rf $TMPDIR/react-* && watchman watch-del-all && rm -rf ios/build && rm -rf node_modules/ && npm cache clean && npm i",
    "test": "jest",
    "test:debug": "node --debug-brk ./node_modules/.bin/jest --runInBand",
    "test:single": "jest --no-cache -- ",
    "test:update": "jest -u",
    "test:watch": "jest --watch",
    "test:nocache": "jest --no-cache",
    "test:coverage": "jest --no-cache --coverage",
    "android:build": "cd android && ./gradlew assembleRelease",
    "android:install": "cd android && ./gradlew assembleRelease && ./gradlew installRelease",
    "android:hockeyapp": "cd android && ./gradlew assembleRelease && puck -submit=auto app/build/outputs/apk/app-release.apk",
    "android:devices": "$ANDROID_HOME/platform-tools/adb devices",
    "android:logcat": "$ANDROID_HOME/platform-tools/adb logcat *:S ReactNative:V ReactNativeJS:V",
    "android:shake": "$ANDROID_HOME/platform-tools/adb devices | grep '\\t' | awk '{print $1}' | sed 's/\\s//g' | xargs -I {} $ANDROID_HOME/platform-tools/adb -s {} shell input keyevent 82",
    "git-hook": "yarn run lint -s && yarn test -s",
    "postinstall": "./scripts/react-native-camera.sh && rndebugger-open"
  },
  "dependencies": {
    "apisauce": "^0.12.0",
    "apollo-cache-inmemory": "^1.2.10",
    "apollo-cache-persist": "^0.1.1",
    "apollo-client": "^2.4.2",
    "apollo-link": "^1.2.3",
    "apollo-link-context": "^1.0.9",
    "apollo-link-error": "^1.1.1",
    "apollo-link-http": "^1.5.5",
    "apollo-link-retry": "^2.2.5",
    "apollo-upload-client": "^8.1.0",
    "bugsnag-react-native": "^2.10.3",
    "client-oauth2": "https://github.com/mincedmit/js-client-oauth2.git",
    "dateformat": "^2.0.0",
    "format-json": "^1.0.3",
    "graphql": "^14.0.2",
    "graphql-anywhere": "^3.1.0",
    "graphql-tag": "^2.2.2",
    "http": "^0.0.0",
